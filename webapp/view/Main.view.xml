<mvc:View 
    controllerName="epamsapui5task2.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table
                id="booksTable"
                mode="MultiSelect"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{path:'books>/Books'}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Available Books" level="H2" />
                        <ToolbarSpacer/>
                        <Button type="Accept" text="Add Record" press="addRecordHandler"></Button>
                        <Button type="Reject" text="Delete Record" press="deleteSelectedRecordHandler"></Button>
                        <ToolbarSeparator/>
                        <Input 
                            id="bookTittleFilterInput"
                            placeholder="Enter a book name"
                            width="15%"/>
                        <Select
                            id="bookGenreFilterSelect"
                            items="{
                                path: 'genres>/',
                                sorter: { path: 'genre' }
                            }"
                            width="15%">
                            <core:Item key="{genres>genre}" text="{genres>genre}" />
				        </Select>
                        <Button type="Default" text="Filter" press="setFilter"></Button>
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Name" />
                    </Column>
                    <Column>
                        <Text text="Author" />
                    </Column>
                    <Column>
                        <Text text="Genre" />
                    </Column>
                    <Column>
                        <Text text="Release Date" />
                    </Column>
                    <Column
                        hAlign="Center"
                        width="10em">
                        <Text text="Available Quantity" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Actions" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{books>ID}" />
                            <HBox>
                                <Text text="{books>Name}" visible="{= !${books>editMode} }" />
                                <Input value="{books>Name}" visible="{books>editMode}"/>
                            </HBox>
                            <Text text="{books>Author}" />
                            <Text text="{books>Genre}" />
                            <Text text="{books>ReleaseDate}" />
                            <Text text="{books>AvailableQuantity}" />
                            <HBox alignItems="Center" justifyContent="Center">
                                <Button 
                                    type="Transparent" 
                                    text="Edit Title" 
                                    visible="{= !${books>editMode}}" 
                                    press="editTittle"/>
                                <Button 
                                    type="Transparent" 
                                    text="Save Title" 
                                    visible="{books>editMode}" 
                                    press="saveEditedTittle"/>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>