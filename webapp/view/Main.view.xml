<mvc:View 
    controllerName="epamsapui5task2.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table
                id="bookTable" 
                class="sapUiResponsiveMargin"
                width="auto"
                items="{path:'books>/Books'}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Available Books" level="H2" />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Name" />
                    </Column>
                    <Column>
                        <Text text="Author" />
                    </Column>
                    <Column>
                        <Text text="Genre" />
                    </Column>
                    <Column>
                        <Text text="Release Date" />
                    </Column>
                    <Column
                        hAlign="End"
                        width="10em">
                        <Text text="Available Quantity" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{books>ID}" />
                            <Text text="{books>Name}" />
                            <Text text="{books>Author}" />
                            <Text text="{books>Genre}" />
                            <Text text="{books>ReleaseDate}" />
                            <Text text="{books>AvailableQuantity}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>